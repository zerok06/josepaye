---
import Arrow from '../assets/icons/Arrow.astro'

interface Props {
  href: string
}

const { href } = Astro.props as Props
---

<a
  href={href}
  class="group hover:underline dark:text-white rounded-full flex items-center gap-0 text-sm text-primary-500 font-inter font-medium py-2 px-5"
  ><slot />
  <span
    class="rotate-180 scale-75 group-hover:translate-x-2 translate-x-1 transition duration-300"
    ><Arrow /></span
  >
</a>
