---
import { techTags } from '../../types/tag'
import Wrapper from '../Wrapper.astro'

const SKILLS = [
  techTags.preact,
  techTags.astro,
  techTags.tailwind,
  techTags.typescript,
  techTags.css,
  techTags.express,
  techTags.html,
  techTags.next,
  techTags.node,
  techTags.vercel,
  techTags.react,
  techTags.javascript,
  techTags.colab,
  techTags.python,
  techTags.figma,
  techTags.notion,
  techTags.tensor,
  techTags.vscode,
]
---

<section class="py-16 md:py-40">
  <h2
    class="text-2xl md:text-5xl font-semibold text-center text-light dark:text-white font-inter md:max-w-[50%] mx-auto max-w-full mb-3"
  >
    Conocimientos y Competencias
  </h2>
  <p class="text-light/70 dark:text-white/70 text-center mb-6">
    Experto en desarrollo web, frameworks modernos y con habilidades en
    inteligencia artificial e innovación tecnológica.
  </p>
  <Wrapper>
    <div class="flex flex-wrap gap-2 md:gap-4 justify-center">
      {
        SKILLS.map(techTag => (
          <div class=" p-3 md:p-4 border dark:border-white/10 dark:bg-white/10 border-primary-100  rounded-2xl md:rounded-3xl backdrop-blur">
            <div class="flex items-center gap-3">
              <img src={techTag.icon} class="size-5 aspect-square" alt="name" />
              <span class="text-sm md:text-base dark:text-white text-light ">
                {techTag.name}
              </span>
            </div>
          </div>
        ))
      }
    </div>
  </Wrapper>
</section>
