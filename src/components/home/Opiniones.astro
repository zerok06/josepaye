---
import { getCollection, getEntries } from 'astro:content'
import SlideOpiniones from '../opiniones/SlideOpiniones'

const data = await getCollection('opiniones')
const opiniones = (await getEntries(data)).map(opinion => opinion.data)
---

<section class="relative py-24 rounded-3xl overflow-hidden">
  <div
    class="absolute w-full bottom-0 left-0 h-[400px] z-[-1] bg-gradient-radial-primary"
  >
  </div>
  <div class="p-4">
    <h2
      class="text-2xl md:text-5xl font-semibold text-center text-white font-inter md:max-w-[50%] mx-auto max-w-full mb-3"
    >
      Reconocido por colaboradores dentro de mi comunidad universitaria.
    </h2>
    <p class="text-white/70 text-center mb-6">
      Lorem, ipsum dolor sit amet consectetur adipisicing elit.
    </p>

    <SlideOpiniones opiniones={opiniones} client:load />
  </div>
</section>
