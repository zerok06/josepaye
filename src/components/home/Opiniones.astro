---
import { getCollection, getEntries } from 'astro:content'
import SlideOpiniones from '../opiniones/SlideOpiniones'

const data = await getCollection('opiniones')
const opiniones = (await getEntries(data)).map(opinion => opinion.data)
---

<section class="relative py-20 rounded-3xl overflow-hidden mt-4">
  <div
    class="absolute w-full bottom-0 left-0 h-[400px] z-[-1] dark:bg-gradient-radial-primary"
  >
  </div>
  <div class="p-4">
    <h2
      class="text-2xl md:text-4xl font-semibold text-center text-light dark:text-white font-inter sm:max-w-[70%] md:max-w-[50%] mx-auto max-w-full mb-3"
    >
      Reconocido por colaboradores dentro de mi comunidad universitaria.
    </h2>
    <p class="text-light/70 dark:text-white/70 text-center mb-6">
      Valorado por mi liderazgo y aportes tecnol√≥gicos en la comunidad
      universitaria.
    </p>

    <SlideOpiniones opiniones={opiniones} client:load />
  </div>
</section>
